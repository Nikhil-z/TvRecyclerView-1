<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_border_color"
    android:orientation="vertical">

    <com.owen.tab.TvTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:background="@color/item_border_color"
        app:tabIndicatorResId="@android:color/transparent"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorWidth="0dp"
        app:tabGravity="center"
        app:tabTexSize="24pt"
        android:layout_marginTop="30dp"
        app:tabTextColor="@drawable/selector_tab_font_color"
        app:tabTextSelectedScale="1.15"
        app:tabMinWidth="260pt"
        app:tabScrollMode="fixed"/>

    <FrameLayout
        android:layout_below="@id/tab_layout"
        android:layout_width="match_parent"
        android:background="@color/item_border_color"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center">

            <TextView
                android:id="@+id/position"
                style="@style/StateText"/>

            <TextView
                android:id="@+id/count"
                style="@style/StateText"/>

            <TextView
                android:id="@+id/state"
                style="@style/StateText"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>